{
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "icon-64.png",
    "default_title": "Turkish Deasciifier - T\u00FCrk\u00E7e karakterleri d\u00FCzelt"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "64": "icon-64.png",
    "128": "icon-128.png"
  },

  "web_accessible_resources": [
    "icon-32.png"
  ],
  "description": "T\u00FCrk\u00E7e karakterleri otomatik olarak d\u00FCzelten bir eklenti (Automatically adds accented characters to Turkish texts)",
  "name": "Turkish Deasciifier",
  "permissions": [
    "notifications",
    "contextMenus",
    "activeTab",
    "storage"
  ],

  "commands": {
    "toggle_deasciify": {
      "suggested_key": {
        "default": "Alt+T",
        "mac": "Ctrl+Shift+T"
      },
      "description": "Toggle deasciify"
    }
  },

  "options_page": "options.html",
  "version": "1.5.1",
  "homepage_url": "https://deasciifier.com/?chrome_extension",
  "manifest_version": 2
}
